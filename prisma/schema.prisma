// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  email String
  name  String?
}

model Deudor {
  cedula          BigInt    @id @unique
  primerNombre    String
  segundoNombre   String?
  primerApellido  String
  segundoApellido String?
  email           String?
  telefono        Telefono?
  direccion       String?
  Carpeta         Carpeta[]
}

model Carpeta {
  numero       Int       @id @unique
  category     Category  @default(Bancolombia)
  tipoProceso  String
  deudor       Deudor    @relation(fields: [deudorCedula], references: [cedula])
  procesos     Proceso[]
  llaveProceso String    @unique
  deudorCedula BigInt
}

model Proceso {
  idProceso            BigInt       @id
  idConexion           Int
  carpeta              Carpeta      @relation(fields: [llaveProceso], references: [llaveProceso])
  llaveProceso         String
  fechaProceso         DateTime
  fechaUltimaActuacion DateTime
  despacho             String
  departamento         Departamento
  sujetosProcesales    String
  esPrivado            Boolean
  cantFilas            Int
  actuaciones          Actuacion[]
  Demanda              Demanda[]
  Juzgado              Juzgado      @relation(fields: [despacho], references: [tipo])
}

model Demanda {
  departamento            Departamento
  capitalAdeudado         BigInt
  entregaGarantiasAbogado DateTime
  etapaProcesal           String
  fechaPresentacion       DateTime
  municipio               String
  obligacion              String[]
  radicado                String       @unique
  vencimientoPagare       DateTime
  juzgados                Juzgado[]
  expediente              String       @id
  proceso                 Proceso[]
}

model Juzgado {
  id                Int
  tipo              String    @id
  url               String
  Proceso           Proceso[]
  Demanda           Demanda?  @relation(fields: [demandaExpediente], references: [expediente])
  demandaExpediente String?
}

model Actuacion {
  proceso        Proceso   @relation(fields: [idProceso], references: [idProceso])
  idRegActuacion Int
  idProceso      BigInt    @id
  llaveProceso   String
  consActuacion  Int
  fechaActuacion DateTime
  actuacion      String
  anotacion      String?
  fechaInicial   DateTime?
  fechaRegistro  DateTime
  fechaFinal     DateTime?
  codRegla       String
  conDocumentos  Boolean
  can            Int
}

model Telefono {
  fijo    Int
  celular Int
  deudor  Deudor @relation(fields: [cedula], references: [cedula])
  cedula  BigInt @id
}

enum Category {
  Terminados
  LiosJuridicos
  Bancolombia
  Reintegra
  Insolvencia
}

enum TipoProceso {
  HIPOTECARIO
  PRENDARIO
  SINGULAR
  ACUMULADO
  PRENDARO
  HIPOTECARIA
  HIPOTECARO
  SOACHA
}

enum Departamento {
  BOGOTA
  CUNDINAMARCA
  META
  ANTIOQUIA
  ATLANTICO
}
